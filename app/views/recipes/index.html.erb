<body class="page_body">
<%= link_to recipes_new_path, class: "link_style title-center" do %>

      
<button class="button-29" role="button">Add new Recipes</button>
              <%end%>
  
  <% if @show_recipes.blank? %>
       <div class="blog-slider new-shadow new-height">
        <h2>Category: <%= @recipe_category.name %></h2>
        <br>
    <h2 class="title-center">There are not any recipes currently in the system.</h2>
    </div>
    <% else %>
           <div class="blog-slider new-shadow new-height">
           <h2>Category: <%= @recipe_category.name %></h2>
  <%= form_tag(recipes_index_path, :method => "get") do %>
<div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder:"Type", class: "form-control" %>
    <div class="input-group-btn">
        <%= button_tag "Search for recipes", :class => 'btn btn-info glyphicon gluphicon-search', :name => nil %>
    </div>
</div>
<%end%>
  <table class="table table-bordered table-dark mt-2">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Cost</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
  <tbody>
  <% @show_recipes.each do |recipe|%>
    <tr>
      <td><%= recipe.name%></td>
      <td>
          <%= recipe.sum%>
          </td>
          <td>
        <%= link_to "Open recipe", show_recipes_path(recipe.id) %>
      </td> 
    </tr>
  </tbody>
    <%end%>
</table>

       </div>
<%end%>
       </div>
</body>
